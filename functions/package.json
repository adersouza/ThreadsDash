{
  "name": "threadsdash-functions",
  "description": "Cloud Functions for ThreadsDash",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
